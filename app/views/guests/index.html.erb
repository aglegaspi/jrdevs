											<% if admin_signed_in? %>
											<%= link_to 'Delete', guest, method: :delete, remote: true, class:'font_properties delete-todo btn float-right' %>
										 <br>
										<% end %>
									 </li>
								 </ul>

					   <% end %>
						 </div>
