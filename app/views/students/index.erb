<h2> <u> Student Profiles </u> </h2>


   <div class="row">
   	  <div class="col">
   	  	  <i> <%= link_to 'Create A Student Profiles', new_student_path %> </i>
   	  </div>
   </div>
 



		


  <div class="row justify-content-md-center">

  	<div class="row justify-content-center">
	<div class="col-4 roster_title">
		<h3>  <b> <p>R</p> </b></h3>
	</div>
</div>
        <div class="col-8 pre-scrollable ">

		       <% @students.each_with_index do |student, counter| %>
                    <%  if counter % 4 == 1 %>           

			            <div class="row student_short_bio student_short_bio_one m-2 ">
							 <div class="col-12"> 
							     Name: <%= student.first_name%> <%= student.last_name%>
							</div>
							<div class="col-12"> 
							     E-mail : <%= student.email %>
							</div>

							<div class="d-flex flex-row-reverse">
						           <div class="col-md-4 " >
						    			<%= link_to 'More Info', student_path(student), 'data-disable-with': "Hold, please..." %>
						    	   </div>
						    	   <div class="col-md-4 " >
						    			<%= link_to 'Edit', edit_student_path(student), 'data-disable-with': "Transferring now..." %>	
						    	    </div>
						    		<div class="col--4 " >
						    			<%= link_to 'Remove', student_path(student), method: :delete, data: { confirm: 'Are you sure?' } %>
						    		</div>						    		
						    </div>							
			            </div>
			                
                    <%  elsif counter % 4 == 2 %>  

			            <div class="row student_short_bio  student_short_bio_two m-2">
							<div class="col-12"> 
							     Name: <%= student.first_name%> <%= student.last_name%>
							</div>
							<div class="col-12"> 
							     E-mail : <%= student.email %>
							</div>
							<div class="d-flex flex-row-reverse">
								    <div class="col-md-4 " >
						    			<%= link_to 'More Info', student_path(student), 'data-disable-with': "Hold, please..." %>
						    		</div>
						    		<div class="col-md-4 " >
						    			<%= link_to 'Edit', edit_student_path(student), 'data-disable-with': "Transferring now..." %>	
						    		</div>
						    		<div class="col--4 " >
						    			<%= link_to 'Remove', student_path(student), method: :delete, data: { confirm: 'Are you sure?' } %>
						    		</div>
						    </div>
                        </div>

                    <%  elsif counter % 4 == 3 %> 

                        <div class="row student_short_bio  student_short_bio_three m-2">
							<div class="col-12"> 
								  Name: <%= student.first_name%> <%= student.last_name%>
							</div>
							<div class="col-12"> 
							     E-mail : <%= student.email %>
							</div>
							<div class="d-flex flex-row-reverse">
						            <div class="col-md-4 " >
						    			<%= link_to 'More Info', student_path(student), 'data-disable-with': "Hold, please..." %>
						    		</div>
							    	<div class="col-md-4 " >
						    			<%= link_to 'Edit', edit_student_path(student), 'data-disable-with': "Transferring now..." %>	
						    		</div>				    	
						    		<div class="col--4 " >
						    			<%= link_to 'Remove', student_path(student), method: :delete, data: { confirm: 'Are you sure?' } %>
						    		</div>    		
						    </div>
	                     </div>


                    <%  elsif counter % 4 == 0 %> 

                         <div class="row student_short_bio student_short_bio_four m-2">
							<div class="col-12"> 
								  Name: <%= student.first_name%> <%= student.last_name%>
							</div>
							<div class="col-12"> 
							     E-mail : <%= student.email %>
							</div>
							<div class="d-flex flex-row-reverse"> 
						    		<div class="col-md-4 " >
						    			<%= link_to 'More Info', student_path(student), 'data-disable-with': "Hold, please..." %>
						    		</div>				    	
						    		<div class="col-md-4 " >
						    			<%= link_to 'Edit', edit_student_path(student), 'data-disable-with': "Transferring now..." %>	
						    		</div>				    	
						    		<div class="col--4 " >
						    			<%= link_to 'Remove', student_path(student), method: :delete, data: { confirm: 'Are you sure?' } %>
						    		</div>
						    </div>							
                         </div>
                  <% end %>
		        <% end %>

         </div>


    </div>
    







